@model DatabaseAccess.ProgrameSessionTable

@{
    ViewBag.Title = "Edit";
}

<h2>Program Session</h2>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Edit A Program Session</h6>
    </div>
    <div class="card-body">
