@model IEnumerable<DatabaseAccess.StaffTable>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Staff</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EmailAddress)
                            </th>
               
                            <th>
                                @Html.DisplayNameFor(model => model.Photo)
                            </th>
                           
                            <th>
                                Status
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Gender)
                            </th>
                            <th>
                                Basic Salary
                            </th>
                          
                            <th>
                                Designation
                            </th>
                           
                            <th>
                                Action
                            </th>
                        </tr>
                        </thead>
                <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                          
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmailAddress)
                                </td>
                               
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Photo))
                                    {
                                        <img class="img-profile rounded-circle"
                                             src="@Url.Content(item.Photo)" height="80" width="80">
                                    }
                                </td>
                              
                                <td>
                                         @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Gender)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BasicSalary)
                                </td>
                              
                                <td>
                                    @Html.DisplayFor(modelItem => item.DesignationTable.Title)
                                </td>
                               
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.StaffID }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Details", "Details", new { id = item.StaffID }, new { @class = "btn btn-info" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.StaffID }, new { @class = "btn btn-danger" })
                                    @Html.ActionLink("Add Resume", "CheckCV", "Resume", new { id = item.StaffID }, new { @class = "btn btn-success" })

                                </td>
                            </tr>
                        }
                    </tbody>
                    </table>
            </div>
        </div>
    </div>

