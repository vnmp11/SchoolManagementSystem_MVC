@model IEnumerable<DatabaseAccess.SubmissionFeeTable>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Submit Tution Fee", "Create", null, new { @class = "btn btn-success" })
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Tution Fee</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.StudentTable.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SubmissionDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FeesMonth)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClassID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProgrameTable.Name)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.UserTable.FullName)
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                    </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentTable.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubmissionDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FeesMonth)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClassID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProgrameTable.Name)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.UserTable.FullName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.SubmissionFeeID }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Details", "Details", new { id = item.SubmissionFeeID }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.SubmissionFeeID }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
</div>
</div>
</div>