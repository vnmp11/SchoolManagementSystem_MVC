@model IEnumerable<DatabaseAccess.TimeTblTable>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Teacher Time Table</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassSubjectTable.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassTable.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomTable.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SessionProgrameSubjectSettingTable.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffTable.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubjectTable.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserTable.FullName)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassSubjectTable.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassTable.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomTable.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SessionProgrameSubjectSettingTable.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffTable.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectTable.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserTable.FullName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.TimeTableID }) |
                @Html.ActionLink("Details", "Details", new { id=item.TimeTableID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.TimeTableID })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
